<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd"
>
    <property name="currentTable" value="brokerage_firm" global="false"/>
    <property name="currentTableComment" value="증권사" global="false"/>

    <property name="referenceTable" value="exchange" global="false"/>

    <changeSet author="newy" id="1">
        <preConditions onFail="CONTINUE">
            <tableExists tableName="${referenceTable}"/>
        </preConditions>

        <createTable tableName="${currentTable}" remarks="${currentTableComment}">
            <!-- PK, FK -->
            <column name="id" type="BIGINT" remarks="${currentTableComment} ID" autoIncrement="true">
                <constraints primaryKey="true" primaryKeyName="${currentTable}_pk"/>
            </column>
            <column name="${referenceTable}_id" type="BIGINT" remarks="증권 거래소 ID">
                <constraints
                        referencedTableName="${referenceTable}"
                        referencedColumnNames="id"
                        foreignKeyName="${currentTable}__${referenceTable}_id_fk"
                        deleteCascade="true"
                        nullable="false"
                />
            </column>

            <!-- 일반 필드 -->
            <column name="code" type="CHAR(3)" remarks="이름">
                <constraints nullable="false"/>
            </column>
            <column name="name_ko" type="VARCHAR2(50)" remarks="한글명">
                <constraints nullable="false"/>
            </column>
            <column name="name_en" type="VARCHAR2(50)" remarks="영어명">
                <constraints nullable="false"/>
            </column>

            <!-- 생성/변경 일시 -->
            <column name="created_at" type="DATETIME" remarks="생성일시" defaultValueDate="now()">
                <constraints nullable="false"/>
            </column>
            <column name="updated_at" type="DATETIME" remarks="변경일시" defaultValueDate="now()">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <!-- 복합 index -->
        <addUniqueConstraint
                tableName="${currentTable}"
                columnNames="${referenceTable}_id, code"
                constraintName="${currentTable}__${referenceTable}_id_code_uk"/>
    </changeSet>
</databaseChangeLog>