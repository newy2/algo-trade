<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd"
>
    <property name="currentTable" value="trade_strategy_signal" global="false"/>
    <property name="currentTableComment" value="자동매매 전략 신호" global="false"/>

    <property name="referenceTable" value="trade_strategy" global="false"/>

    <changeSet author="newy" id="1">
        <preConditions onFail="CONTINUE">
            <tableExists tableName="${referenceTable}"/>
        </preConditions>

        <createTable tableName="${currentTable}" remarks="${currentTableComment}">
            <!-- PK, FK -->
            <column name="id" type="BIGINT" remarks="${currentTableComment} ID" autoIncrement="true">
                <constraints primaryKey="true" primaryKeyName="${currentTable}_pk"/>
            </column>
            <column name="${referenceTable}_id" type="BIGINT" remarks="자동매매 전략 신호 ID">
                <constraints
                        referencedTableName="${referenceTable}"
                        referencedColumnNames="id"
                        foreignKeyName="${currentTable}__${referenceTable}_id_fk"
                        deleteCascade="true"
                        nullable="false"
                        unique="true"
                />
            </column>

            <!-- 일반 필드 -->
            <column name="name" type="VARCHAR2(40)" remarks="이름">
                <constraints nullable="false"/>
            </column>
            <column name="signal" type="CHAR(3)" remarks="신호 (ENT: 진입신호, EXT: 진출신호)">
                <constraints nullable="false"/>
            </column>
            <column name="price" type="NUMERIC" remarks="상품 가격">
                <constraints nullable="false"/>
            </column>
            <column name="candle_time_range" type="NUMERIC" remarks="사용한 분봉">
                <constraints nullable="false"/>
            </column>

            <!-- 생성/변경 일시 -->
            <column name="created_at" type="DATETIME" remarks="생성일시" defaultValueDate="now()">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <!-- pro 모드 대체 로직  -->
        <sql>
            ALTER TABLE ${currentTable}
                ADD CONSTRAINT ${currentTable}__signal_check CHECK ("signal" IN ('ENT', 'EXT'));
        </sql>
    </changeSet>
</databaseChangeLog>