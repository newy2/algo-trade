<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd"
>
    <property name="currentTable" value="trade_strategy" global="false"/>
    <property name="currentTableComment" value="자동매매 전략" global="false"/>

    <changeSet author="newy" id="1">
        <createTable tableName="${currentTable}" remarks="${currentTableComment}">
            <!-- PK, FK -->
            <column name="id" type="BIGINT" remarks="${currentTableComment} ID" autoIncrement="true">
                <constraints primaryKey="true" primaryKeyName="${currentTable}_pk"/>
            </column>

            <!-- 일반 필드 -->
            <column name="name_ko" type="VARCHAR2(50)" remarks="한글명">
                <constraints nullable="false"/>
            </column>
            <column name="name_en" type="VARCHAR2(50)" remarks="영문명">
                <constraints nullable="false"/>
            </column>
            <column name="position" type="CHAR(3)" remarks="포지션 (LNG: 롱 포지션, SHR: 숏 포지션)" defaultValue="LNG">
                <constraints nullable="false"/>
            </column>
            <column name="version" type="TINYINT" remarks="버전" defaultValue="1">
                <constraints nullable="false"/>
            </column>

            <!-- 생성/변경 일시 -->
            <column name="created_at" type="DATETIME" remarks="생성일시" defaultValueDate="now()">
                <constraints nullable="false"/>
            </column>
            <column name="updated_at" type="DATETIME" remarks="변경일시" defaultValueDate="now()">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <!-- 복합 index -->
        <addUniqueConstraint
                tableName="${currentTable}"
                columnNames="name_ko, position, version"
                constraintName="${currentTable}__name_ko_position_version_uk"/>

        <!-- pro 모드 대체 로직  -->
        <sql>
            ALTER TABLE ${currentTable}
                ADD CONSTRAINT ${currentTable}__position_check CHECK (position IN ('LNG', 'SHR'));
        </sql>
    </changeSet>
</databaseChangeLog>