<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd"
>
    <property name="currentTable" value="brokerage_firm" global="false"/>

    <property name="referenceTable" value="exchange" global="false"/>

    <changeSet author="newy" id="1">
        <preConditions onFail="CONTINUE">
            <tableExists tableName="${currentTable}"/>
            <rowCount tableName="${currentTable}" expectedRows="0"/>
        </preConditions>

        <insert tableName="${currentTable}">
            <column name="${referenceTable}_id"
                    valueComputed="(SELECT id FROM ${referenceTable} WHERE name_ko = '가상화폐 거래소')"/>
            <column name="code" value="BBT"/>
            <column name="name_en" value="ByBit"/>
            <column name="name_ko" value="바이빗"/>
        </insert>
        <insert tableName="${currentTable}">
            <column name="${referenceTable}_id"
                    valueComputed="(SELECT id FROM ${referenceTable} WHERE name_ko = '한국거래소')"/>
            <column name="code" value="KIS"/>
            <column name="name_en" value="Korea Investment"/>
            <column name="name_ko" value="한국투자증권"/>
        </insert>
    </changeSet>
</databaseChangeLog>